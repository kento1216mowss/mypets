<div class = "devise-box">
  <h2>ログイン</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email,placeholder: "メールアドレス", autofocus: true, autocomplete: "email",class: "devise-write"%>
    </div>
  
    <div class="field">
      <%= f.password_field :password,placeholder: "パスワード", autocomplete: "current-password",class: "devise-write"%>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>