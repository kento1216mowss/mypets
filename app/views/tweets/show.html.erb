 <article>
    
      <header>
         <a href="/users/<%= @tweet.user_id %>">
          <div class = "user-name">
            <%= @tweet.user.nickname %>
          </div>  
         </a>  
          <% if user_signed_in? && current_user.id == @tweet.user_id %>
              <div class="more">
                <ul class="more_list">
                  <li>
                    <%= link_to '削除', "/tweets/#{@tweet.id}", method: :delete %>
                  </li>
                </ul>
              </div>
          <% end %>
      </header>
      <div class ="image-box">
           <image src = "<%= @tweet.image %> "width= "600" height="600"></image>
      </div>
  
      <div class = "good-box">
        <span>
          <btn>
            <svg>
              ！
            </svg>
          </btn>
        </span>
      </div>    
      <div class = "comment-box">
        <span>
          <btn>
            <svg>
              C
            </svg>
          </btn>
        </span>
      </div>    
      
      
    
  </article>