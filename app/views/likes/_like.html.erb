<div class = "like-box">
　 <% if user_signed_in? %>
        <% if current_user.likes.find_by(tweet_id: @tweet.id) %>
            <div class="like_button_on">
                <%= link_to likes_delete_path(tweet_id: @tweet.id), {method: "post", remote: true} do %>
                  <i class="fas fa-heart"></i>いいね！<%= @tweet.likes.count%>
                <% end %>
            </div>
        <% else %>
            <div class="like_button">
                <%= link_to  likes_create_path(tweet_id: @tweet.id), {method: "post", remote: true} do %>
              <i class="far fa-heart"></i></i>いいね！<%= @tweet.likes.count%>
                <% end %>
            </div>
        <% end %>
   <% else %>
         <div class="like_button_on">
          <i class="fas fa-heart"></i></i>いいね！<%= @tweet.likes.count%>
         </div>
　 <% end %>    
　 <div class = "like-user">
    　 <p><a href = "/likes/<%=@tweet.id %>/show/">いいねした人↪︎︎</a></p>
　 </div>
</div>