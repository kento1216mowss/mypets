<a href = "/likes/<%=@tweet.id %>/show/"><%= @tweet.likes.count%>のいいね</a>


　 <% if user_signed_in? %>
    <% if current_user.likes.find_by(tweet_id: @tweet.id) %>
        <div class="like_button_on">
            <%= link_to "❤️", likes_delete_path(tweet_id: @tweet.id), {method: "post", remote: true} %>
        </div>
    <% else %>
        <div class="like_button">
            <%= link_to "♡", likes_create_path(tweet_id: @tweet.id), {method: "post", remote: true} %>
        </div>
    <% end %>
　 <% end %>    